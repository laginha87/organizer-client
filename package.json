{
  "name": "vpv",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start-dev": "parcel src/index.html",
    "lint": "standardx '**/*.ts' '**/*.tsx'",
    "graphql-generate": "apollo client:codegen --target typescript --watch",
    "start": "npm-run-all --parallel start-dev graphql-generate",
    "build": "parcel build src/index.html",
    "test-unit": "yarn jest src/",
    "test-e2e": "yarn jest e2e/",
    "coverage-unit": "yarn test-unit --coverage",
    "coverage-e2e": "percy exec yarn test-e2e --coverage",
    "coverage": "npm-run-all coverage-e2e coverage-unit",
    "ci": "yarn lint && yarn coverage"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "apollo-boost": "^0.4.7",
    "apollo-client": "^2.6.8",
    "apollo-utilities": "^1.3.3",
    "classnames": "^2.2.6",
    "draft-js": "^0.10.1 || ^0.11.0",
    "draft-js-mention-plugin": "^3.1.5",
    "draft-js-plugins-editor": "^3.0.0",
    "formik": "^2.1.4",
    "graphql": "14.6.0",
    "luxon": "^1.23.0",
    "parcel": "^1.12.4",
    "query-string": "^6.12.1",
    "react": "^15.5.0 || ^16.0.0-rc",
    "react-dom": "^15.5.0 || ^16.0.0-rc",
    "react-router-dom": "^5.1.2",
    "tailwindcss": "^1.4.4",
    "yup": "^0.28.5"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.4",
    "@babel/core": "^7.9.6",
    "@percy/puppeteer": "^1.1.0",
    "@testing-library/jest-dom": "^5.8.0",
    "@testing-library/react": "^10.0.4",
    "@types/expect-puppeteer": "^4.4.1",
    "@types/jest": "^25.2.1",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/luxon": "^1.22.0",
    "@types/puppeteer": "^3.0.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/react-router": "^5.1.7",
    "@types/react-router-dom": "^5.1.5",
    "@types/webpack-env": "^1.15.2",
    "@types/yup": "^0.28.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "apollo": "^2.27.3",
    "apollo-cache-inmemory": "1.6.2",
    "apollo-server": "^2.13.1",
    "bufferutil": "4.0.1",
    "canvas": "2.5.0",
    "eslint": "6.8.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-puppeteer": "^4.4.0",
    "lint-staged": "^10.2.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "postcss-import": "^12.0.1",
    "puppeteer": "^3.1.0",
    "puppeteer-to-istanbul": "^1.3.1",
    "standardx": "^5.0.0",
    "ts-jest": "^26.0.0",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3",
    "utf-8-validate": "5.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "standardx --fix"
    ]
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "globals": [
      "fetch"
    ],
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  }
}
